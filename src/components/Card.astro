---
import TestIcon from "../icons/TestIcon.astro";
const { title, description, delay, icon: Icon } = Astro.props;
---

<div
  data-aos="fade-down"
  data-aos-delay={delay}
  class="text-secundary flex flex-col px-3 py-6 gap-8 bg-linear-to-br from-white to-secundary/10 hover:from-secundary/5 hover:to-secundary/15 border border-neutral-200 hover:border-secundary/50 rounded transition"
>
  {
    Icon && (
      <span class="w-fit rounded-full">
        <Icon sizes="30" />
      </span>
    )
  }
  <div class="flex flex-col gap-1.5 text-primary">
    <p class="text-xl font-medium">{title}</p>
    <p class="max-w-64 text-sm">{description}</p>
  </div>
</div>
